-- 0.7 Photon Editor (love2d)

local unpack = table.unpack or unpack
local quads
local function photon(imd)
    if not imd then
        imd = love.image.newImageData('res/pht/test215657453911565822127.png')
    end
    local tx = love.graphics.newImage(imd)
    local ph = love.graphics.newParticleSystem(tx,32768)
    ph:setInsertMode('top')
    ph:setEmitterLifetime(-1)
    ph:setEmissionRate(512)
    ph:setEmissionArea('borderellipse',96,96,0,true)
    if true then
        ph:setQuads(unpack(quads(imd,1,1)))
    end
    ph:setOffset(98,4)
    ph:setColors(0.94999992847443,1,0.049999967217445,0.5,0.14999996125698,1,1,0.5,0.86000001430511,0.60000002384186,0.34000000357628,1,0.39000007510185,1,1,0.5,1,1,0.24000000953674,0.5,1,0.36000001616776,0.78000000491738,0.3999999910593,0.82000000402331,0.45000001229346,0.76000000536442,0.53999998420477,1,0.72000000625849,1,0.44999998807907)
    ph:setParticleLifetime(0.5,3)
    ph:setSizes(0,0.20000000298023,0.40000000596046,0.60000002384186,0.80000001192093,1,1,1)
    ph:setSizeVariation(1)
    ph:setSpeed(8,8)
    ph:setLinearAcceleration(0,0,0,0)
    ph:setRadialAcceleration(0,0)
    ph:setTangentialAcceleration(0,4)
    ph:setLinearDamping(0.5,1)
    ph:setDirection(0)
    ph:setSpread(1)
    ph:setSpin(0,0)
    ph:setSpinVariation(1)
    ph:setRotation(0,0)
    ph:setRelativeRotation(true)
    return ph
end

function quads(imgdata,numx,numy)
    local q = {}
    local iw, ih = imgdata:getDimensions()
    local qw, qh = iw/numx, ih/numy
    for y=0,numy-1 do
        for x=0,numx-1 do
            q[#q+1]=love.graphics.newQuad(
                    qw*x,qh*y,qw,qh,iw,ih)
        end
    end
    return q
end
return photon(...)
